@using Microsoft.Extensions.Options
@model CompleteModel
@inject IOptions<BusinessOptions> BusinessOptions

<div class="row medium-9 large-9 columns">
    <div class="callout success">
        <h5>Your payment has been accepted.</h5>
    </div>

    <h3>Thanks for your support!</h3>
    <img src="~/images/logo_400.png" class="monster-image" />


    <h4>Your Receipt</h4>
    <h5>@DateTime.Today.ToString("d")</h5>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Sponsorship of ASP.NET Monsters Weekly</td>
                <td>@Model.NumberOfEpisodes</td>
                <td>@BusinessOptions.Value.PricePerEpisode</td>
                <td>@Model.SubTotal.ToString("c")</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>Tax (GST)</td>
                <td>@Model.Gst.ToString("c")</td>

            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><strong>Total</strong></td>
                <td>@Model.Total.ToString("c")</td>
            </tr>
            <tr>
                <td colspan="4"><span class="medium-text-left">GST Number @BusinessOptions.Value.GstNumber</span></td>
            </tr>
        </tbody>
    </table>

</div>
